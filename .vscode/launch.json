{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Firefox",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "reAttach": true,
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "port": 6000,
      "profile": "default",
      "tmpDir": "${env:HOME}/tmp",
      "timeout": 20
    },
    {
      "name": "Launch Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "userDataDir": "${env:HOME}/.config/google-chrome",
      "timeout": 30000
    }
  ]
}
